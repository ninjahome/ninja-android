<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.ninjahome.ninja.viewmodel.AuthorizationSingleFriendViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">

        <include
            layout="@layout/title_layout"
            app:viewModel="@{viewModel}" />

        <EditText
            android:id="@+id/idEt"
            textChanged="@{viewModel.idChange}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="16dp"
            android:background="@color/transparent"
            android:drawableBottom="@drawable/edittext_bottom_line"
            android:importantForAutofill="no"
            android:text="@={viewModel.address}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleLayout"
            tools:ignore="LabelFor,TextFields" />

        <ImageView
            onClickCommand="@{viewModel.clickScan}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/idqr"
            android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toBottomOf="@+id/idEt"
            app:layout_constraintEnd_toEndOf="@+id/idEt"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/inputDaysLab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="60dp"
            android:text="@string/authorization_input_days"
            android:textColor="@color/color_26253c"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idEt" />
        <EditText
            android:id="@+id/daysEt"
            textChanged="@{viewModel.idChange}"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:maxLength="20"
            android:layout_marginEnd="16dp"
            android:inputType="number"
            android:background="@color/transparent"
            android:drawableBottom="@drawable/edittext_bottom_line"
            android:importantForAutofill="no"
            android:text="@={viewModel.days}"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputDaysLab"
            tools:ignore="LabelFor,TextFields" />
        <TextView
            android:id="@+id/allAuthorizationTv"
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/color_3b877f"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="6dp"
            onClickCommand="@{viewModel.clickAllAuthorization}"
            android:text="@string/authorization_all_authorization"
            app:layout_constraintTop_toBottomOf="@+id/daysEt"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/remainingActivationDaysTv"
            android:layout_width="wrap_content"
            android:textColor="@color/color_86868a"
            app:layout_constraintEnd_toStartOf="@+id/allAuthorizationTv"
            android:layout_marginTop="6dp"
            android:text="@string/authorization_remaining_activation_days"
            app:layout_constraintTop_toBottomOf="@+id/daysEt"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/authorizationrBtn"
            onClickCommand="@{viewModel.clickSure}"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="83dp"
            android:background="@drawable/bg_create_group_chat_btn"
            android:enabled="false"
            android:text="@string/sure"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bottomLine" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>