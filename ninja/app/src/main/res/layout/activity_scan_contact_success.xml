<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.ninjahome.ninja.viewmodel.ScanContactSuccessViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">

        <include
            layout="@layout/title_layout"
            app:viewModel="@{viewModel}" />

        <ImageView
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/my_top_bg"
            android:layout_height="wrap_content"
            tools:ignore="ContentDescription" />
        <ImageView
            android:id="@+id/nameIv"
            android:layout_width="52dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleLayout"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_height="52dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/idTv"
            android:textColor="@color/color_86868a"
            app:layout_constraintTop_toTopOf="@+id/nameIv"
            app:layout_constraintBottom_toBottomOf="@+id/nameIv"
            app:layout_constraintStart_toEndOf="@+id/nameIv"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@{viewModel.uid}"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/line"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameIv"
            android:layout_marginTop="15dp"
            android:layout_margin="15dp"
            android:background="@color/color_e7e7e7c"
            android:layout_height="1dp"/>

        <Button
            android:id="@+id/sendBtn"
            android:layout_width="0dp"
            android:layout_height="57dp"
            android:gravity="center"
            onClickCommand="@{viewModel.clickSend}"
            android:textColor="@color/color_26253c"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="74dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_send_msg"
            app:layout_constraintEnd_toStartOf="@+id/addBtn"
            android:text="@string/detail_send"
            android:layout_marginStart="20dp" />

        <Button
            android:id="@+id/addBtn"
            android:layout_width="0dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/bg_button"
            android:layout_height="57dp"
            onClickCommand="@{viewModel.clickAdd}"
            app:layout_constraintStart_toEndOf="@+id/sendBtn"
            app:layout_constraintTop_toTopOf="@+id/sendBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/sendBtn"
            android:text="@string/detail_add_contact"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>