<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.ninjahome.ninja.viewmodel.ContactListViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">

        <include
            layout="@layout/title_layout"
            app:viewModel="@{viewModel}" />

        <TextView
            android:id="@+id/groupTv"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleLayout"
            android:layout_marginStart="20dp"
            android:textSize="16sp"
            onClickCommand="@{viewModel.clickGroup}"
            android:drawablePadding="5dp"
            android:textColor="@color/color_0c123d"
            android:layout_marginEnd="20dp"
            android:text="@string/contact_group_chat"
            android:gravity="center_vertical"
            android:layout_height="64dp"
            app:drawableStartCompat="@drawable/group_chat"
            app:drawableEndCompat="@drawable/next_icon" />

        <View
            android:id="@+id/line"
            android:layout_width="0dp"
            app:layout_constraintTop_toBottomOf="@+id/groupTv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            android:background="@drawable/split_line"
            android:layout_height="6dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/contactsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/line"
            app:layout_constraintBottom_toBottomOf="parent"
            android:overScrollMode="never"
            android:background="@color/white" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>