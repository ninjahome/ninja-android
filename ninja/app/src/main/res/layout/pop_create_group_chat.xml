<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:background="@drawable/bg_more_action"
    app:cardBackgroundColor="@android:color/transparent">

    <ImageView
        android:id="@+id/closeIv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:scaleType="center"
        android:src="@drawable/close_pop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_group_chat_create_name"
        android:textColor="@color/color_26253c"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/closeIv" />

    <EditText
        android:id="@+id/nameEt"
        style="@style/EditTextStyle"
        android:layout_width="0dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="21dp"
        android:importantForAutofill="no"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTv"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/NoNameBtn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/bg_no_name_button"
        android:text="@string/create_group_chat_create_no_name"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/createBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameEt" />

    <Button
        android:id="@+id/createBtn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_button"
        android:text="@string/confirm"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/NoNameBtn"
        app:layout_constraintTop_toBottomOf="@+id/nameEt" />
</androidx.constraintlayout.widget.ConstraintLayout>
