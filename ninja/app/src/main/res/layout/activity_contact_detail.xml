<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.ninjahome.ninja.viewmodel.ContactDetailViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">
        <View
            android:id="@+id/statusBar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp" />
        <ImageView
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/my_top_bg"
            android:layout_height="wrap_content"
            tools:ignore="ContentDescription" />
        <include
            layout="@layout/title_layout"
            app:layout_constraintTop_toBottomOf="@+id/statusBar"
            app:viewModel="@{viewModel}" />

        <ImageView
            android:id="@+id/nameIv"
            android:layout_width="52dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleLayout"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_height="52dp"
            tools:ignore="ContentDescription" />
        <TextView
            android:id="@+id/nameTv"
            android:textColor="@color/color_0c123d"
            app:layout_constraintTop_toTopOf="@+id/nameIv"
            app:layout_constraintStart_toEndOf="@+id/nameIv"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="start"
            android:textSize="22sp"
            android:layout_marginStart="8dp"
            android:text="@{viewModel.name}"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/idTv"
            android:textColor="@color/color_86868a"
            app:layout_constraintTop_toBottomOf="@+id/nameTv"
            app:layout_constraintStart_toEndOf="@+id/nameIv"
            android:text="@{viewModel.uid}"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            android:singleLine="true"
            android:ellipsize="middle"
            onLongClickCommand="@{viewModel.longClickId}"
            android:layout_width="150dp"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/line"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameIv"
            android:layout_marginTop="15dp"
            android:layout_margin="15dp"
            android:background="@color/color_e7e7e7c"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/remarkTv"
            android:layout_width="wrap_content"
            android:text="@string/contact_remark"
            app:layout_constraintTop_toBottomOf="@+id/line"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/color_26253c"
            android:layout_marginStart="15dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@+id/remarkTv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@{viewModel.contact.remark}"
            android:gravity="end|center_vertical"
            onClickCommand="@{viewModel.clickEdit}"
            app:layout_constraintBottom_toBottomOf="@+id/remarkTv"
            style="@style/NextTextViewStyle"/>
        <Button
            android:id="@+id/sendBtn"
            android:layout_width="158dp"
            android:layout_height="57dp"
            android:gravity="center"
            onClickCommand="@{viewModel.clickSend}"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="74dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/detail_send"
            android:layout_marginStart="20dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>