<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.ninjahome.ninja.utils.TimeUtils"/>

        <variable
            name="item"
            type="com.ninjahome.ninja.viewmodel.ConversationItemViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        onClickCommand="@{item.clickItem}"
        android:layout_height="54dp">

        <ImageView
            android:id="@+id/iconIv"
            android:layout_width="48dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="48dp"
            android:background="@{item.receiverIcon}"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/nameTv"
            android:layout_width="0dp"
            app:layout_constraintStart_toEndOf="@+id/iconIv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="70dp"
            android:text="@{item.conversation.nickName}"
            android:textStyle="bold"
            android:lines="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/color_0c123d"
            android:textSize="16sp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            app:layout_constraintTop_toBottomOf="@+id/nameTv"
            app:layout_constraintStart_toEndOf="@+id/iconIv"
            android:layout_marginEnd="70dp"
            android:ellipsize="end"
            android:layout_marginStart="10dp"
            android:gravity="start"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="12sp"
            android:text="@{item.conversation.msg}"
            android:layout_marginTop="3dp"
            android:textColor="@color/color_909090"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/timeTv"
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="15dp"
            android:text="@{TimeUtils.INSTANCE.getMsgFormatTime(item.conversation.time)}"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/timeTv"
            android:background="@drawable/circledot"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginEnd="15dp"
            isVisible="@{item.conversation.unreadCount != 0}"
            android:text="@{String.valueOf(item.conversation.unreadCount)}"
            android:layout_height="wrap_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>