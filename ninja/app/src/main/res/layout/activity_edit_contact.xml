<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.ninjahome.ninja.viewmodel.EditContactViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/title_layout"
            app:viewModel="@{viewModel}" />
        <TextView
            android:id="@+id/remarkLabTv"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="27dp"
            android:textSize="14sp"
            android:textColor="@color/color_86868a"
            app:layout_constraintTop_toBottomOf="@+id/titleLayout"
            android:text="@string/contact_remark"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/nickNameEt"
            style="@style/EditTextStyle"
            android:layout_marginTop="8dp"
            android:text="@={viewModel.nickName}"
            app:layout_constraintTop_toBottomOf="@+id/remarkLabTv"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="@string/search_contact_input_nick_name"
            android:singleLine="true"
            tools:ignore="MissingConstraints"
            android:importantForAutofill="no"
            android:inputType="text" />
        <TextView
            android:id="@+id/desLabTv"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="27dp"
            android:textSize="14sp"
            android:textColor="@color/color_86868a"
            app:layout_constraintTop_toBottomOf="@+id/nickNameEt"
            android:text="@string/contact_des"
            android:layout_height="wrap_content"/>
        <EditText
            style="@style/EditTextStyle"
            android:text="@={viewModel.remark}"
            app:layout_constraintTop_toBottomOf="@+id/desLabTv"
            android:layout_marginStart="20dp"
            android:paddingTop="6dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="16dp"
            android:hint="@string/search_contact_remark"
            tools:ignore="MissingConstraints"
            android:importantForAutofill="no"
            android:gravity="top"
            android:minLines="3"
            android:minHeight="90dp"
            android:layout_height="wrap_content"
            android:inputType="text" />

        <TextView
            style="@style/ButtonStyle"
            android:layout_marginBottom="75dp"
            onClickCommand="@{viewModel.clickSave}"
            android:text="@string/search_contact_add"
            android:layout_width="158dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>