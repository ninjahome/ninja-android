<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.ninjahome.ninja.viewmodel.AuthorizationViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/title_layout"
            app:viewModel="@{viewModel}" />
            <View
                android:id="@+id/friendsNotSavedView"
                android:layout_width="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleLayout"
                android:layout_marginTop="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="15dp"
                onClickCommand="@{viewModel.clickInputId}"
                android:background="@drawable/round_rect_white_8"
                android:layout_marginEnd="15dp"
                android:layout_height="72dp"/>
        <TextView
            android:id="@+id/friendsNotSavedTv"
            android:layout_width="wrap_content"
            android:text="@string/authorization_friends_not_saved"
            app:layout_constraintStart_toStartOf="@+id/friendsNotSavedView"
            app:layout_constraintTop_toTopOf="@+id/friendsNotSavedView"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/color_86868a"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:text="@string/authorization_input_id"
            app:layout_constraintStart_toStartOf="@+id/friendsNotSavedView"
            app:layout_constraintEnd_toEndOf="@+id/friendsNotSavedView"
            app:layout_constraintTop_toBottomOf="@+id/friendsNotSavedTv"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/color_26253c"
            android:layout_height="wrap_content"
            app:drawableEndCompat="@drawable/next_icon" />

        <View
            android:id="@+id/friendsSavedView"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/friendsNotSavedView"
            android:layout_marginTop="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="15dp"
            onClickCommand="@{viewModel.clickSelectFriend}"
            android:background="@drawable/round_rect_white_8"
            android:layout_marginEnd="15dp"
            android:layout_height="72dp"/>
        <TextView
            android:id="@+id/friendsSavedTv"
            android:layout_width="wrap_content"
            android:text="@string/authorization_friends_saved"
            app:layout_constraintStart_toStartOf="@+id/friendsSavedView"
            app:layout_constraintTop_toTopOf="@+id/friendsSavedView"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/color_86868a"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:text="@string/authorization_select_friend_from_contact"
            app:layout_constraintStart_toStartOf="@+id/friendsSavedView"
            app:layout_constraintEnd_toEndOf="@+id/friendsSavedView"
            app:layout_constraintTop_toBottomOf="@+id/friendsSavedTv"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/color_26253c"
            android:layout_height="wrap_content"
            app:drawableEndCompat="@drawable/next_icon" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>