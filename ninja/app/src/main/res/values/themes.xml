<resources>
    <!-- Base application theme. -->
    <style name="Theme.Ninja" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_0c123d</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:textColorPrimary">@color/color_0c123d</item>
        <item name="colorAccent">@color/color_0c123d</item>

    </style>

    <style name="SplashTheme" parent="Theme.Ninja">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="TransitionTheme" parent="Theme.Ninja">
        <item name="android:windowContentTransitions">true</item>
    </style>

</resources>